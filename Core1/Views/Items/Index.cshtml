@model IEnumerable<Core1.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table" id="dataitem">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Image</th>
            <th>Supplier</th>
            <th>Create Date</th>
            <th>Update Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.items)
        {
            <tr>
                <td id="Name">@item.Name</td>
                <td id="Price">@item.Price</td>
                <td id="Stock">@item.Stock</td>
                <td><img src="~/images/@item.Image" width="50" /></td>
                <td>@item.Supplier.Name</td>
                <td>@item.CreateDate</td>
                <td>@item.UpdateDate</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    @*<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-dark">Details</a>*@
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="check(@item.Id)">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

